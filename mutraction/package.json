{
  "name": "mutraction",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomtheisen/mutraction.git"
  },
  "version": "0.13.0",
  "description": "Transactional reactive state management based on simple mutation.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist/*.*", "dist/src"],
  "scripts": {
    "build": "npm run clean && npx tsc && npm run bundle && npm run types && npm run cleanout",
    "bundle": "npx esbuild .\\out\\src\\index.js --bundle --format=esm --outfile=.\\dist\\index.js",
    "types": "npx tsc -p tsconfig.types.json",
    "test": "npx tsc && npx uvu out/tests -i \"[.]d[.]ts$\"",
    "clean": "del /Q /S dist && del /Q /S out",
    "cleanout": "rd /Q /S out"
  },
  "author": "Tom Theisen",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.18.16",
    "typescript": "^5.1.6",
    "uvu": "^0.5.6"
  }
}
