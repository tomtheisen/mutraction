{
  "name": "mutraction",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomtheisen/mutraction"
  },
  "version": "0.8.0",
  "description": "Transactional reactive state management based on simple mutation.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist/*.*", "dist/src"],
  "scripts": {
    "bundle": "npm run clean && npx tsc && npm run combine && npm run types",
    "combine": "npx esbuild .\\out\\index.js --bundle --format=esm --outfile=.\\dist\\index.js",
    "types": "npx tsc --declaration --emitDeclarationOnly --module ES2022 --target ES2022 --outDir dist .\\index.ts",
    "test": "npx tsc && npx uvu dist/tests -i \"[.]d[.]ts$\"",
    "clean": "del /Q /S dist && del /Q /S out"
  },
  "author": "Tom Theisen",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.18.15",
    "typescript": "^5.1.6",
    "uvu": "^0.5.6"
  }
}
